*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html{
  color:#000;
  background:#fff;
  overflow-x: hidden;
  overflow-y:scroll;
}

html *{
  outline:0;
  -webkit-text-size-adjust:none;
  -webkit-tap-highlight-color:rgba(0,0,0,0)
}

table{
  border-collapse:collapse;
  border-spacing:0
}

a
{
  text-decoration:none
}

.clearfix{
  display: inline-block;
}
.clearfix:after{
  display: block;
  content: ".";
  height: 0;
  line-height: 0;
  clear: both;
  visibility: hidden;
}
.btn-active {
  position: relative;
}
.btn-active:not(.is-disabled):active:after {
  opacity: .4;  
}
.btn-active:after {
    background-color: #000;
    content: " ";
    opacity: 0;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    position: absolute;
}

