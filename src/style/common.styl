.1px {
  background-origin: border-box;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#d9d9d9), color-stop(50%, #d9d9d9), color-stop(50%, transparent));
  background-image: linear-gradient(180deg, #d9d9d9, #d9d9d9 50%, transparent 50%);
  background-repeat: no-repeat;
  background-position: top left;
  background-origin: content-box;
  box-sizing: border-box;
  line-height: 1;
  min-height: inherit;
  overflow: hidden;
  width: 100%;
}
@media (-webkit-min-device-pixel-ratio: 1),(min-device-pixel-ratio: 1)
  .1px{
    background-size: 120% 2px;
  }
@media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
  .1px{
    background-size: 120% 3px;
  }

