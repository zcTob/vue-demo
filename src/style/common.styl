.m-radio
  position: relative;
  display: inline-block;
  width: 28px;/*px*/
  height: 28px;/*px*/
  border: 2px solid #247ef2;
  border-radius: 100%;
  .m-radio-check
    position: absolute;
    top: 0;
    left: 0;
    display: inline-block;
    pointer-events: none;
  input 
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity : 0;
  input:checked + .m-radio-check
    width: 12px;/*px*/
    height: 12px;/*px*/
    background-color: #247ef2;
    border-radius: 100%;
    top: 6px;/*px*/
    left: 6px;/*px*/

.m-checkbox
  position: relative;
  display: inline-block;
  width: 28px;/*px*/
  height: 28px;/*px*/
  border-radius: 4px;/*px*/
  border: 2px solid #247ef2;
  input
    position: relative;
    width: 500%;
    height: 500%;
    top: 0;
    left: 0;
    opacity : 0;
  .m-checkbox-check
    position: absolute;
    top: 0;
    left: 0;
    display: inline-block;
    pointer-events: none;
  input:checked + .m-checkbox-check
    top: 4px;
    left: 8px;
    border: 4px solid #247ef2;
    border-left: 0;
    border-top: 0;
    width: 8px;
    height: 16px;
    transform: rotate(45deg)
